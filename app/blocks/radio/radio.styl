.radio
	display block
	position relative
	cursor: pointer
	font-size 20px
	font-weight 400
	&__input
		size 1px
		opacity 0
		&:checked + .radio__border
			border-color #DAB336
			box-shadow 0 25px 35px -18px #ddd
	&__border
		position absolute
		display block
		width 100%
		height 100%
		border 3px solid silver
	&__text
		display block
		padding 25px 35px
		line-height 1.3
	&__price
		display block
		font-size 28px
		font-weight 400
		padding 0px 35px 25px
		&:after
			content: "\20bd"
			