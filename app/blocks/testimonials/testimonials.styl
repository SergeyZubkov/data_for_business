.testimonials
	display block
	padding 150px 0 200px
	h2
		margin-bottom 50px
	&__item
		margin-bottom 50px
		&-title
			font-size 30px
			font-weight 700
			margin 30px 0
		&-img
			border 4px solid #DAB336
			&-title
				margin-top 10px
				font-size 14px
				font-weight 700
			&-subtitle
				margin-top 5px
				font-size 14px
			&-contact
				margin-top 12px
				font-size 14px
				a
					font-size 14px
					color #DAB336
					text-decoration none
					display inline-block
					border-bottom 1px solid #DAB336
					
@media screen and (max-width: 420px)
	.testimonials
		padding 0px