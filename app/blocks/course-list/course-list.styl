.course-list
	display block
	margin-top 50px
	overflow hidden
	&__item
		margin-bottom 15px
		height 130px
		&-title
			font-size 22px
			font-weight 800
			margin-bottom 15px
		&-subtitle
			font-size 22px
			margin-bottom 10px
		&:last-child 
			&	.course-list__item-title
				font-size 80px
				margin-bottom 0px
				&:after
					content ''
					display block
					size(80px)
					border-radius 50%
					background #FFE694
					position absolute
					top 30%
					z-index -1
			& .course-list__item-subtitle
				font-size 14px
				width 180px
				
