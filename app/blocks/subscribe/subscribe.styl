.subscribe
	display block
	background #fff
	border: 5px solid #000
	padding 117px 75px 55px
	input
		margin-bottom 50px
		border 2px solid #dedede
		border-radius 5px
		width 100%
		height 35px
		box-shadow 0 0 
	&__subtitle
		font-size 20px
		line-height 1.4
		margin 20px 0 50px
	&__label
		font-size 20px
		font-weight 800
		margin-bottom 20px
	.radio
		margin-bottom 30px
	a
		color rgb(218,179,54)

@media only screen and (max-width : 420px) 
	.subscribe
		padding 20px 10px